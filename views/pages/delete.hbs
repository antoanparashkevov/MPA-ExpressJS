<section>
    <h1>Delete Accommodation</h1>
    {{#if error}}
        <div>
            {{#each error}}
                {{this}}
            {{/each}}
        </div>
    {{else}}
        <form action="/room/{{room._id}}/delete" method="post">

            {{#with room}}
                <div>
                    <label for="name">
                        <span>Name</span>
                        <input
                                type="text"
                                name="name"
                                value="{{name}}"
                                disabled
                        >
                    </label>
                </div>
                <div>
                    <label for="desc">
                        <span>Description</span>
                        <textarea 
                            rows="5" name="desc"
                            disabled
                        >
                            {{description}}
                        </textarea>
                    </label>
                </div>
                <div>
                    <label for="location">
                        <span>Location</span>
                        <input
                                type="text"
                                name="location"
                                value="{{location}}"
                                disabled
                        >
                    </label>
                </div>
                <div>
                    <label for="price">
                        <span>Price</span>
                        <input
                                type="number"
                                name="price"
                                value="{{price}}"
                                disabled
                        >
                    </label>
                </div>
                <div>
                    <label for="beds">
                        <span>Beds</span>
                        <input
                                type="number"
                                name="beds"
                                value="{{beds}}"
                                disabled
                        >
                    </label>
                </div>
                <div>
                    <label for="imgUrl">
                        <span>Image</span>
                        <input
                                type="text"
                                name="imgUrl"
                                value="{{imgURL}}"
                                disabled
                        >
                    </label>
                </div>
            {{/with}}
            <button>Delete</button>
        </form>
    {{/if}}
</section>