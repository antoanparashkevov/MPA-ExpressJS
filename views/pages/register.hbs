<section>
    <h1>Register</h1>
    {{#if error}}
        <div>
            {{#each error}}
                    <div>{{msg}}</div>
            {{/each}}
        </div>
    {{/if}}
        <main>
            <form action="/auth/register" method="post">
                <div>
                    <label for="username">
                        <span>Username</span>
                        <input type="text" {{#if fields.username}} style="border: 2px solid red;"{{/if}} name="username" value="{{fields.oldValueName}}">
                    </label>
                </div>
                <div>
                    <label for="password">
                        <span>Password</span>
                        <input type="password" {{#if fields.password}} style="border: 2px solid red;"{{/if}} name="password">
                    </label>
                </div>
                <div>
                    <label for="repass">
                        <span>Repeat</span>
                        <input type="password" {{#if fields.repass}} style="border: 2px solid red;"{{/if}} name="repass">
                    </label>
                </div>
                <button>Sign Up</button>
            </form>
        </main>
        <footer>
            <div>
                <span>You already have an account? <a href="/auth/login">Sign in</a></span>
            </div>
        </footer>
</section>